# LinkedIn OAuth Credentials
# Get these from https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# OAuth redirect URI (must match what's configured in LinkedIn Developer Portal)
# For Vercel: https://your-app.vercel.app/api/auth/linkedin/callback
# For local:  http://localhost:3001/api/auth/linkedin/callback
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/auth/linkedin/callback

# Frontend URL (only needed for local dev; Vercel auto-detects from request)
FRONTEND_URL=http://localhost:5173

# Server port (local dev only)
PORT=3001

# Session secret (REQUIRED - used to encrypt session cookies)
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_secret_here
